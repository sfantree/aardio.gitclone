					return s.value;;
			} 
			_set = function( value ){
				::HPSocket.HP_Server_SetFreeSocketObjPool(owner.pSocket,value)
			} 	
		};
		freeSocketObjHold  = {
			_get = function(){
				var s = {INT value} 
				if(::HPSocket.HP_Server_GetFreeSocketObjHold(owner.pSocket,s))
					return s.value;;
			} 
			_set = function( value ){
				::HPSocket.HP_Server_SetFreeSocketObjHold(owner.pSocket,value)
			} 	
