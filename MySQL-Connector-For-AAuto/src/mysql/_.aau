				}
				case "insert_id" {
					return owner.get_insert_id();
				}
				case "sqlstate" {
					return owner.get_sqlstate();
				}
				case "thread_id" {
					return owner.get_thread_id();
				}
				case "warning_count" {
					return owner.get_warning_count();
				}
			}
		}
	}
}

